{
  "extends": [
    "config:base",
    ":assignee(arska)"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sENV .*_VERSION=(?<currentValue>.*)\\s"
      ]
    }
  ]
}
